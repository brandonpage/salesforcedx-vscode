{
  "name": "salesforcedx-vscode-lwc-mobile",
  "version": "48.7.0",
  "description": "Provides Lightning Web Component preview functionality for Android and iOS mobile devices.",
  "qna": "https://github.com/forcedotcom/salesforcedx-vscode/issues",
  "bugs": {
    "url": "https://github.com/forcedotcom/salesforcedx-vscode/issues"
  },
  "publisher": "salesforce",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@salesforce/eslint-config-lwc": "0.3.0",
    "@salesforce/lightning-lsp-common": "2.3.6",
    "@salesforce/lwc-language-server": "2.3.6",
    "vscode-extension-telemetry": "0.0.17",
    "@salesforce/salesforcedx-utils-vscode": "48.7.0"
  },
  "devDependencies": {
    "@salesforce/salesforcedx-test-utils-vscode": "48.7.0",
    "@types/chai": "^4.0.0",
    "@types/mocha": "^5",
    "@types/node": "8.9.3",
    "@types/sinon": "^7.5.2",
    "@types/uuid": "^3.4.5",
    "@types/which": "^1.3.1",
    "chai": "^4.0.2",
    "cross-env": "5.2.0",
    "mocha": "^5",
    "mocha-junit-reporter": "^1.23.3",
    "mocha-multi-reporters": "^1.1.7",
    "nyc": "^13",
    "sinon": "^7.3.1",
    "sinon-chai": "^3.4.0",
    "ts-sinon": "^1.0.25",
    "typescript": "3.1.6",
    "vscode": "^1.1.36",
    "vscode-test": "^1.3.0",
    "vscode-uri": "^1.0.8"
  },
  "extensionDependencies": [
    "dbaeumer.vscode-eslint",
    "salesforce.salesforcedx-vscode-core"
  ],
  "scripts": {
    "vscode:prepublish": "npm prune --production",
    "vscode:package": "vsce package",
    "vscode:sha256": "node ../../scripts/generate-sha256.js >> ../../SHA256",
    "vscode:publish": "node ../../scripts/publish-vsix.js",
    "compile": "tsc -p ./",
    "lint": "tslint --project .",
    "watch": "tsc -watch -p .",
    "clean": "shx rm -rf node_modules && shx rm -rf out && shx rm -rf coverage && shx rm -rf .nyc_output",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run test:unit && npm run test:vscode-integration",
    "test:unit": "node ./node_modules/nyc/bin/nyc.js ./node_modules/mocha/bin/_mocha --recursive out/test/unit --reporter mocha-multi-reporters --reporter-options configFile=../../config/mochaUnitTestsConfig.json",
    "test:vscode-integration": "node ../../scripts/download-vscode && node ../../scripts/install-vsix-dependencies dbaeumer.vscode-eslint && node ../../scripts/run-tests-with-recipes",
    "test:vscode-insiders-integration": "cross-env CODE_VERSION=insiders npm run test:vscode-integration"
  },
  "activationEvents": [
    "workspaceContains:sfdx-project.json",
    "workspaceContains:**/workspace-user.xml",
    "onView:salesforce-lightning-explorer"
  ],
  "main": "./out/src",
  "repository": "git+https://github.com/forcedotcom/salesforcedx-vscode.git",
  "engines": {
    "vscode": "^1.40.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "views": {
      "test": [
        {
          "id": "sfdx.force.lightning.lwc.mobile.test.view",
          "name": "%force_lightning_lwc_mobile_test_view_name%",
          "when": "sfdx:project_opened"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "sfdx.force.lightning.lwc.mobile",
          "when": "sfdx:project_opened && resource =~ /.*/lwc/[^/]+(/[^/]+\\.(html|css|js))?$/"
        }
      ],
      "editor/title/context": [
        {
          "command": "sfdx.force.lightning.lwc.mobile",
          "when": "sfdx:project_opened && resource =~ /.*/lwc/[^/]+(/[^/]+\\.(html|css|js))?$/"
        }
      ],
      "explorer/context": [
        {
          "command": "sfdx.force.lightning.lwc.mobile",
          "when": "sfdx:project_opened && resource =~ /.*/lwc/[^/]+(/[^/]+\\.(html|css|js))?$/"
        }
      ],
      "commandPalette": [
        {
          "command": "sfdx.force.lightning.lwc.mobile",
          "when": "sfdx:project_opened && resource =~ /.*/lwc/[^/]+(/[^/]+\\.(html|css|js))?$/"
        }
      ]
    },
    "commands": [
      {
        "command": "sfdx.force.lightning.lwc.mobile",
        "title": "%force_lightning_lwc_mobile_text%"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "%force_lightning_lwc_mobile_preferences%",
      "properties": {
        "salesforcedx-vscode-lwc-mobile.rememberDevice": {
          "type": "boolean",
          "default": true,
          "description": "%force_lightning_lwc_mobile_remember_device_description%"
        }
      }
    }
  }
}
